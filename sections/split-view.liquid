{% schema %}
{
  "name": "Split View",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Explore Our Curated Collections"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "default": "medium",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" },
        { "value": "xlarge", "label": "Extra Large" }
      ]
    },
    {
      "type": "select",
      "id": "heading_weight",
      "label": "Heading Weight",
      "default": "700",
      "options": [
        { "value": "400", "label": "Regular" },
        { "value": "500", "label": "Medium" },
        { "value": "600", "label": "Semi Bold" },
        { "value": "700", "label": "Bold" },
        { "value": "800", "label": "Extra Bold" }
      ]
    },
    {
      "type": "collection",
      "id": "collection_1",
      "label": "First Collection"
    },
    {
      "type": "collection",
      "id": "collection_2",
      "label": "Second Collection"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "background-1",
      "options": [
        { "value": "background-1", "label": "Background 1" },
        { "value": "background-2", "label": "Background 2" },
        { "value": "inverse", "label": "Inverse" },
        { "value": "accent", "label": "Accent" }
      ]
    }
  ],
  "presets": [{
    "name": "Split View"
  }]
}
{% endschema %}

<section class="split-collections color-{{ section.settings.color_scheme }}">
  <div class="container">
    <h2 class="main-heading heading-{{ section.settings.heading_size }}" style="font-weight: {{ section.settings.heading_weight }}">{{ section.settings.heading }}</h2>

    {% assign collection_keys = "collection_1,collection_2" | split: "," %}
    {% for key in collection_keys %}
      {% assign collection = collections[section.settings[key]] %}
      {% if collection %}
      <div class="collection-split-row">
        <div class="collection-info centered">
          <h3 class="collection-title">{{ collection.title }}</h3>
          <p class="collection-description">{{ collection.description | truncate: 100 }}</p>
          <a href="{{ collection.url }}" class="explore-btn">Explore â†’</a>
        </div>
        <div class="collection-products">
          {% for product in collection.products limit: 4 %}
          <div class="product-gallery-card">
            <a href="{{ product.url }}">
              <img src="{{ product.featured_image | img_url: 'master' }}" alt="{{ product.title }}">
              <div class="product-caption-overlay">
                <div class="product-caption-text">
                  {{ product.title }}
                  <div class="price">{{ product.price | money }}</div>
                </div>
              </div>
            </a>
          </div>
          {% endfor %}
        </div>
      </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<style>
.split-collections {
  padding: 14px 8px;
  background: #000000; /* changed to black */
  font-family: 'DM Sans', sans-serif;
  color: #fff;
}

/* Heading size classes */
.main-heading {
  text-align: center;
  margin-bottom: 16px;
  color: #ffffff;
}
.heading-small {
  font-size: 22px;
}
.heading-medium {
  font-size: 30px;
}
.heading-large {
  font-size: 38px;
}
.heading-xlarge {
  font-size: 46px;
}

/* Collection row */
.collection-split-row {
  display: flex;
  flex-wrap: wrap;
  background: #111111; /* dark card bg */
  padding: 12px;
  border-radius: 14px;
  margin-bottom: 20px;
  box-shadow: 0 2px 10px rgba(255, 255, 255, 0.05);
}

/* Collection info */
.collection-info {
  flex: 1 1 120px;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 10px;
  padding-right: 14px;
}
.collection-info.centered {
  align-items: center;
}
.collection-title {
  font-size: 18px;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 6px;
}
.collection-description {
  font-size: 14px;
  color: #cccccc;
  margin-bottom: 10px;
}
.explore-btn {
  background: #ffffff;
  color: #000000;
  padding: 6px 14px;
  font-size: 13px;
  border-radius: 18px;
  text-decoration: none;
  transition: background 0.3s ease, transform 0.2s ease;
}
.explore-btn:hover {
  background: #cccccc;
  transform: scale(1.05);
}

/* Product list */
.collection-products {
  flex: 3 1 400px;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
  gap: 12px;
  padding-right: 40px;
}

/* Product cards */
.product-gallery-card {
  position: relative;
  border-radius: 8px;
  overflow: hidden;
  background: #1a1a1a;
  box-shadow: 0 2px 12px rgba(255, 255, 255, 0.03);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  cursor: pointer;
  aspect-ratio: 1 / 1.1;
}
.product-gallery-card:hover {
  transform: scale(1.02);
  box-shadow: 0 6px 18px rgba(255, 255, 255, 0.06);
}
.product-gallery-card img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}
.product-gallery-card:hover img {
  transform: scale(1.03);
}

/* Product overlay */
.product-caption-overlay {
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 8px;
  background: rgba(0, 0, 0, 0.8); /* dark overlay */
  backdrop-filter: blur(4px);
  text-align: center;
  opacity: 0;
  transform: translateY(100%);
  transition: all 0.3s ease;
}
.product-gallery-card:hover .product-caption-overlay {
  opacity: 1;
  transform: translateY(0);
}
.product-caption-text {
  font-size: 14px;
  font-weight: 600;
  color: #ffffff;
}
.product-caption-text .price {
  font-size: 13px;
  color: #cccccc;
  margin-top: 4px;
}

/* Responsive */
@media (max-width: 768px) {
  .collection-split-row {
    flex-direction: column;
    padding: 10px;
  }
  .collection-info {
    margin-bottom: 8px;
  }
}
</style>
