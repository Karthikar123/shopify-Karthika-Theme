              } else if (label.includes("birthdate") || label.includes("dob")) {
                petBirthdateProp = value;
              }
            });

            if (petNameProp || petTypeProp || petBreedProp || petWeightProp || petBirthdateProp) {
              matchingPet = {
                id: petId || null,
                name: petNameProp,
                type: petTypeProp,
                breed: petBreedProp,
                weight: petWeightProp,
                birthdate: petBirthdateProp
              };
              console.log('üêæ Built pet info from line item properties:', matchingPet);
            }
          }

          console.log('üêæ Matching pet for this item (final):', matchingPet);
console.log('üêæ Matching pet for this item (final before fallback):', matchingPet);

// 5) FINAL FALLBACK ‚Äì if still no match but we have pets in cookie, use the first pet
if (!matchingPet) {
