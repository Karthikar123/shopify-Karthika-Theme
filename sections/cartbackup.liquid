  }

  /* Container for multiple pets - horizontal layout */
  .pets-container {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-top: 1rem;
  }

  .pet-info-section {
    flex: 1;
    min-width: 250px;
    background: none;
    border: none;
    border-radius: 0;
    padding: 0;
    margin: 0;
    font-size: 0.9rem;
    box-shadow: none;
  }

  /* Hide all line item properties by default 
     (we'll show pet details via our custom dropdown instead) */
  .product-option {
    display: none !important;
  }

  /* Keep structure readable for JS (even if hidden) */
  .product-option dd {
    white-space: pre-wrap;
    line-height: 1.6;
    display: block;
    margin-left: 0;
    font-family: inherit;
  }
  .product-option dt {
    display: block;
    margin-bottom: 0;
  }

  .pet-info-toggle {
    margin-top: 0.5rem;
    border: 0;
    padding: 0;
    background: transparent;
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 1rem;
    font-weight: 600;
    color: #5c7e63;
    cursor: pointer;
  }

  .pet-info-toggle:hover {
    text-decoration: underline;
  }

  .pet-info-toggle-icon {
    display: inline-block;
    transition: transform 0.2s ease;
  }

  .pet-info-details[open] .pet-info-toggle-icon {
    transform: rotate(180deg);
  }

  /* Responsive adjustments */
  @media screen and (max-width: 749px) {
    .pets-container {
      flex-direction: column;
      gap: 1rem;
    }
    
    .pet-info-section {
      font-size: 0.85rem;
