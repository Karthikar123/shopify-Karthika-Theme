  // -------------------------------
  // Cart empty / cleanup helpers
  // -------------------------------
  function cleanupPetInfoWhenCartEmpty() {
    console.log('üóëÔ∏è Cleaning up pet info because cart is empty...');

    if (window.clearAllPetInfo) {
      window.clearAllPetInfo();
    } else {
      setCookie('pets_info', '', -1);
      setCookie('pet_info', '', -1);
    }

    const cartItemPetInfoDisplays = document.querySelectorAll('.cart-item-pet-info');
    cartItemPetInfoDisplays.forEach(display => {
      display.innerHTML = '';
      display.style.display = 'none';
    });

    console.log('üóëÔ∏è Pet info cleanup completed');
  }

  function cleanupPetDataForRemovedItems(cartData) {
    console.log('üßπ Checking for removed items and cleaning up pet data...');

    const petsInfoCookie = getCookie('pets_info');
    if (!petsInfoCookie) {
      console.log('üßπ No pets info to clean up');
      return;
    }

    let petsInfo;
    try {
      petsInfo = JSON.parse(petsInfoCookie);
    } catch (err) {
      console.error('üßπ Error parsing pets info:', err);
      return;
    }

    if (!petsInfo || petsInfo.length === 0) {
      console.log('üßπ No pets to clean up');
      return;
    }

    const currentProductHandles = cartData.items
      ? cartData.items.map(item => {
          return item.product_handle || item.handle || item.product_title?.toLowerCase().replace(/\s+/g, '-');
        })
      : [];
    console.log('üßπ Current cart product handles:', currentProductHandles);

    const petsToKeep = petsInfo.filter(pet => {
      if (pet.redirectedTo) {
        const productStillInCart = currentProductHandles.some(handle => {
          return handle && handle.includes(pet.redirectedTo);
        });

        if (!productStillInCart) {
          console.log(`üßπ Pet ${pet.name} is associated with removed product ${pet.redirectedTo}, removing from cookie`);
          return false;
        }
      }
      return true;
    });

    if (petsToKeep.length !== petsInfo.length) {
      console.log(`üßπ Removed ${petsInfo.length - petsToKeep.length} pets associated with deleted products`);

      if (petsToKeep.length > 0) {
        setCookie('pets_info', JSON.stringify(petsToKeep), 1);
      } else {
        setCookie('pets_info', '', -1);
      }

      setTimeout(() => {
        displayPetInfoFromCookie();
      }, 500);
    } else {
      console.log('üßπ No pets need to be removed');
    }
  }

  function checkAndCleanupPetInfoIfCartEmpty() {
    fetch('/cart.js')
      .then(response => response.json())
      .then(cart => {
        console.log('üõí Current cart state:', cart);

        if (cart.item_count === 0) {
          console.log('üõí Cart is empty, cleaning up pet info...');
          cleanupPetInfoWhenCartEmpty();
        } else {
          cleanupPetDataForRemovedItems(cart);
        }
      })
      .catch(error => {
        console.error('üõí Error checking cart state:', error);
      });
  }

  // -------------------------------
  // Monitor cart updates (qty/remove)
  // -------------------------------
  function setupCartRemovalMonitoring() {
    console.log('üõí Setting up cart removal monitoring...');

    const originalUpdateQuantity = window.CartItems?.prototype?.updateQuantity;

    if (originalUpdateQuantity) {
      window.CartItems.prototype.updateQuantity = function(line, quantity, event, name, variantId) {
        console.log('üõí Cart quantity update detected:', { line, quantity, event, name, variantId });

        const result = originalUpdateQuantity.call(this, line, quantity, event, name, variantId);

        if (quantity === 0) {
          console.log('üõí Item removal detected, checking if cart is empty...');
          setTimeout(() => {
            checkAndCleanupPetInfoIfCartEmpty();
            displayPetInfoFromCookie();
          }, 1000);
        } else {
          setTimeout(() => {
            displayPetInfoFromCookie();
          }, 1000);
        }

        return result;
      };
    }

    const originalFetch = window.fetch;
    window.fetch = function(url, options) {
      if (
        url &&
        (url.includes('/cart/change') ||
          url.includes('/cart/update') ||
          url.includes('/cart/add'))
      ) {
        console.log('üõí Cart API call detected:', url, options);

        return originalFetch.call(this, url, options).then(response => {
          const clonedResponse = response.clone();

          if (response.ok) {
            clonedResponse.text().then(text => {
              try {
                const data = JSON.parse(text);
                console.log('üõí Cart API response:', data);

                if (data.item_count === 0) {
                  console.log('üõí Cart is now empty, cleaning up pet info...');
                  cleanupPetInfoWhenCartEmpty();
                } else {
                  console.log('üõí Cart still has items, checking for pet data cleanup...');
                  cleanupPetDataForRemovedItems(data);
                }

                // üîÅ After ANY cart change/add, re-attach pet info
                displayPetInfoFromCookie();
              } catch (err) {
                console.error('üõí Error parsing cart API response:', err);
              }
            });
          }

          return response;
        });
      }

      return originalFetch.call(this, url, options);
    };
  }

  // -------------------------------
  // On page load
  // -------------------------------
  document.addEventListener('DOMContentLoaded', function() {
    console.log('üõí Cart page loaded (DOMContentLoaded)');
    displayPetInfoFromCookie();
    setupCartRemovalMonitoring();
  });
</script>

