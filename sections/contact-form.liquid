      <script>
    document.addEventListener('DOMContentLoaded', function () {
      var section = document.getElementById('contact-{{ section.id }}');
      if (!section) return;

      // Find success first; else error block
      var target = section.querySelector('.form-status.form__message, .form__message[role="alert"]');
      if (!target) return;

      // Stop the browser from stealing scroll
      if (target.hasAttribute('autofocus')) target.removeAttribute('autofocus');
      if ('scrollRestoration' in history) history.scrollRestoration = 'manual';

      // Detect sticky header height (Dawn & most themes)
      function getHeaderHeight() {
        var el =
          document.querySelector('.shopify-section-header-sticky') ||
          document.querySelector('.header-wrapper') ||
          document.querySelector('#shopify-section-header') ||
          document.querySelector('header');
        return el ? el.getBoundingClientRect().height : 0;
      }

      function scrollToBanner(opts) {
        var headerH = Math.round(getHeaderHeight()) || 96;  // fallback
        var buffer = 12;                                     // a little breathing room
        // Also teach scrollIntoView about the sticky header
        target.style.scrollMarginTop = (headerH + buffer) + 'px';

        if (opts && opts.useIntoView) {
          target.scrollIntoView({ behavior: opts.behavior || 'smooth', block: 'start' });
        } else {
          var rect = target.getBoundingClientRect();
          var top = rect.top + (window.pageYOffset || document.documentElement.scrollTop) - headerH - buffer;
          window.scrollTo({ top: top, behavior: opts && opts.behavior || 'smooth' });
        }
      }

      // Phase 1: initial smooth scroll
      scrollToBanner({ useIntoView: true, behavior: 'smooth' });

      // Phase 2: after header animations/layout shifts finish, lock it in
      // Do a few retries via rAF, then a final hard-set without smooth behavior.
      var tries = 0;
      function settle() {
        tries++;
        scrollToBanner({ useIntoView: true, behavior: 'auto' });
        if (tries < 4) requestAnimationFrame(settle);
        else {
          // Final absolute position correction
          scrollToBanner({ useIntoView: false, behavior: 'auto' });
          try { target.focus({ preventScroll: true }); } catch (e) {}
        }
      }
      // Small delay so any CSS/JS reveal effects start first
      setTimeout(function(){ requestAnimationFrame(settle); }, 200);
    });

    // Email invalid format validation
    (function() {
      'use strict';
      
      document.addEventListener('DOMContentLoaded', function() {
        var section = document.getElementById('contact-{{ section.id }}');
        if (!section) return;
        
        var formEl = section.querySelector('#ContactForm');
        var emailInput = section.querySelector('#ContactForm-email');
        var nameInput = section.querySelector('#ContactForm-name');
        var phoneInput = section.querySelector('#ContactForm-phone');
        var commentInput = section.querySelector('#ContactForm-body');
        
        if (!emailInput || !nameInput || !formEl) return;
        
        // Strict email validation regex (same as newsletter)
        var emailPattern = /^[A-Za-z0-9](?!.*\.\.)[A-Za-z0-9._%+-]*[A-Za-z0-9_%+-]@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$/;
        
        // Name validation - letters, spaces, and apostrophes
        var namePattern = /^[A-Za-z\s']+$/;
        
      function validatePhone(shouldTrim) {
        if (!phoneInput) return true; // Phone is optional
        
        var phoneValue = phoneInput.value || '';
        
        // Check for spaces in the phone number (not just leading/trailing)
        if (phoneValue.includes(' ')) {
          phoneInput.setCustomValidity('Phone number should not contain spaces');
          return false;
        }
        
        // Only trim if explicitly requested (on blur or submit)
        if (shouldTrim) {
          var trimmedValue = phoneValue.trim();
          if (phoneValue !== trimmedValue) {
            phoneInput.value = trimmedValue;
            phoneValue = trimmedValue;
          }
        }
        
        // For validation, use trimmed value to check if empty
        var trimmedForCheck = phoneValue.trim();
        
        // Empty phone - optional field, so valid
        if (!trimmedForCheck) {
          phoneInput.setCustomValidity('');
          return true;
        }
        
        // Check if only numbers FIRST (before length check)
        var isValid = /^[0-9]+$/.test(trimmedForCheck);
        
        if (!isValid) {
          phoneInput.setCustomValidity('Phone number should contain only numbers (no spaces)');
          return false;
        }
        
        // Check length - min 9, max 12 characters (only if it's all numbers)
        if (trimmedForCheck.length < 9) {
          phoneInput.setCustomValidity('Phone number must be at least 9 digits');
          return false;
        }
        
        if (trimmedForCheck.length > 12) {
          phoneInput.setCustomValidity('Phone number must not exceed 12 digits');
          return false;
        }
        
        // Clear custom validity - valid phone
        phoneInput.setCustomValidity('');
        return true;
      }
        
        function validateName(shouldTrim) {
          // Get the raw value
          var nameValue = nameInput.value || '';
          
          // Only trim if explicitly requested (on blur or submit)
          if (shouldTrim) {
            var trimmedValue = nameValue.trim();
            if (nameValue !== trimmedValue) {
              nameInput.value = trimmedValue;
              nameValue = trimmedValue;
            }
          }
          
          // For validation, use trimmed value to check if empty
          var trimmedForCheck = nameValue.trim();
          if (!trimmedForCheck) {
            nameInput.setCustomValidity('');
            return false;
          }
          
          // Check length - min 3, max 50 characters (on trimmed value for length check)
          if (trimmedForCheck.length < 3) {
            nameInput.setCustomValidity('Name must be at least 3 characters');
            return false;
          }
          
          if (trimmedForCheck.length > 50) {
            nameInput.setCustomValidity('Name must not exceed 50 characters');
            return false;
          }
          
          // Validate pattern on trimmed value
          var isValid = namePattern.test(trimmedForCheck);
          
          if (!isValid) {
            // Set custom validity message - shows in browser's native popup only
            nameInput.setCustomValidity('Name should contain only letters, spaces, and apostrophes');
            return false;
          } else {
            // Clear custom validity - valid name
            nameInput.setCustomValidity('');
            return true;
          }
        }
        
        function validateEmail() {
          var emailValue = (emailInput.value || '').trim();
          
          // Empty email - let browser handle it with native message
          if (!emailValue) {
            emailInput.setCustomValidity('');
            return false;
          }
          
          var isValid = emailPattern.test(emailValue);
          
          if (!isValid) {
            // Set custom validity message - shows in browser's native popup only
            emailInput.setCustomValidity('Please enter a valid email address.');
            return false;
          } else {
            // Clear custom validity - valid email
            emailInput.setCustomValidity('');
            return true;
          }
        }
        
        function updateCommentCounter() {
          if (!commentInput) return;
          
          var counter = section.querySelector('#ContactForm-body-counter');
          if (!counter) return;
          
          var commentValue = commentInput.value || '';
          var length = commentValue.length;
          
          // Update counter display
          counter.textContent = length + '/500';
          
          // Add exceeded class if over 500
          if (length > 500) {
            counter.classList.add('exceeded');
          } else {
            counter.classList.remove('exceeded');
          }
        }
        
        function validateComment(shouldTrim) {
          if (!commentInput) return true;
          
          var commentValue = commentInput.value || '';
          
          // Only trim if explicitly requested (on blur or submit)
          if (shouldTrim) {
            var trimmedValue = commentValue.trim();
            if (commentValue !== trimmedValue) {
              commentInput.value = trimmedValue;
              commentValue = trimmedValue;
            }
          }
          
          // For validation, use trimmed value to check if empty
          var trimmedForCheck = commentValue.trim();
          
          // Empty comment - let browser handle it with native message
          if (!trimmedForCheck) {
            commentInput.setCustomValidity('');
            return false;
          }
          
          // Check maximum length FIRST (before minimum check)
          if (trimmedForCheck.length > 500) {
            commentInput.setCustomValidity('Comment must not exceed 500 characters');
            return false;
          }
          
          // Check minimum length
          if (trimmedForCheck.length < 3) {
            commentInput.setCustomValidity('Comment must be at least 3 characters');
            return false;
          }
          
          // Clear custom validity - valid comment
          commentInput.setCustomValidity('');
          return true;
        }
        
        function handleSubmit(e) {
          // Trim name value before validation
          var nameValue = (nameInput.value || '').trim();
          if (nameInput.value !== nameValue) {
            nameInput.value = nameValue;
          }
          var emailValue = (emailInput.value || '').trim();
          var commentInput = section.querySelector('#ContactForm-body');
          
          // Trim phone value before validation (if exists)
          if (phoneInput) {
            var phoneValue = (phoneInput.value || '').trim();
            if (phoneInput.value !== phoneValue) {
              phoneInput.value = phoneValue;
            }
          }
          
          // Trim comment value before validation
          var commentValue = commentInput ? (commentInput.value || '').trim() : '';
          if (commentInput && commentInput.value !== commentValue) {
            commentInput.value = commentValue;
          }
          
          // Check if required fields are empty
          if (!nameValue || !emailValue || !commentValue) {
            e.preventDefault();
            e.stopPropagation();
            e.stopImmediatePropagation();
            
            // Set custom message for empty fields
            if (!nameValue) {
              nameInput.setCustomValidity('Please fill the fields');
              nameInput.reportValidity();
              nameInput.focus();
            } else if (!emailValue) {
              emailInput.setCustomValidity('Please fill the fields');
              emailInput.reportValidity();
              emailInput.focus();
            } else if (!commentValue) {
              commentInput.setCustomValidity('Please fill the fields');
              commentInput.reportValidity();
              commentInput.focus();
            }
            
            return false;
          }
          
          // Validate name format (trim before validation)
          if (!validateName(true)) {
            e.preventDefault();
            e.stopPropagation();
            e.stopImmediatePropagation();
            // Trigger browser's native validation message
            nameInput.reportValidity();
            nameInput.focus();
            return false;
          }
          
          // Validate email format
          if (!validateEmail()) {
            e.preventDefault();
            e.stopPropagation();
            e.stopImmediatePropagation();
            // Trigger browser's native validation message
            emailInput.reportValidity();
            emailInput.focus();
            return false;
          }
          
          // Validate phone format (if provided, trim before validation)
          if (phoneInput && !validatePhone(true)) {
            e.preventDefault();
            e.stopPropagation();
            e.stopImmediatePropagation();
            // Trigger browser's native validation message
            phoneInput.reportValidity();
            phoneInput.focus();
            return false;
          }
          
          // Validate comment length (trim before validation)
          if (commentInput && !validateComment(true)) {
            e.preventDefault();
            e.stopPropagation();
            e.stopImmediatePropagation();
            // Trigger browser's native validation message
            commentInput.reportValidity();
            commentInput.focus();
            return false;
          }
          
          // Clear any custom validity messages before submitting
          nameInput.setCustomValidity('');
          emailInput.setCustomValidity('');
          if (phoneInput) phoneInput.setCustomValidity('');
          if (commentInput) commentInput.setCustomValidity('');
          
          return true;
        }
        
        // Check on input for name field - don't trim while typing
        nameInput.addEventListener('input', function(e) {
          validateName(false); // Don't trim while typing
        });
        
        // Trim leading/trailing spaces on blur
        nameInput.addEventListener('blur', function(e) {
          validateName(true); // Trim on blur
        });
        
        // Check on input for email field
        emailInput.addEventListener('input', function() {
          var emailValue = (emailInput.value || '').trim();
          emailInput.value = emailValue;
          validateEmail();
        });
        
        // Check on blur for email field
        emailInput.addEventListener('blur', function() {
          validateEmail();
        });
        
        // Check on input for comment field (if exists) - don't trim while typing
        if (commentInput) {
          commentInput.addEventListener('input', function() {
            updateCommentCounter();
            validateComment(false); // Don't trim while typing
          });
          
          // Trim leading/trailing spaces on blur
          commentInput.addEventListener('blur', function() {
            validateComment(true); // Trim on blur
          });
          
          // Initial counter update
          updateCommentCounter();
          
          // Check on invalid event for comment - ensure custom message shows
          commentInput.addEventListener('invalid', function(e) {
            var commentValue = (commentInput.value || '').trim();
            if (commentValue) {
              // Check maximum length FIRST (before minimum check)
              if (commentValue.length > 500) {
                commentInput.setCustomValidity('Comment must not exceed 500 characters');
              } else if (commentValue.length < 3) {
                commentInput.setCustomValidity('Comment must be at least 3 characters');
              }
            }
          });
        }
        
      // Check on input for phone field (if exists) - prevent spaces
      if (phoneInput) {
        // Prevent spaces from being entered
        phoneInput.addEventListener('keydown', function(e) {
          if (e.key === ' ' || e.keyCode === 32) {
            e.preventDefault();
            phoneInput.setCustomValidity('Phone number should not contain spaces');
            phoneInput.reportValidity();
            return false;
          }
        });
        
        // Remove spaces if somehow entered (paste, etc.) and validate
        phoneInput.addEventListener('input', function() {
          var phoneValue = phoneInput.value || '';
          // Remove all spaces
          var valueWithoutSpaces = phoneValue.replace(/\s/g, '');
          if (phoneValue !== valueWithoutSpaces) {
            phoneInput.value = valueWithoutSpaces;
            phoneInput.setCustomValidity('Phone number should not contain spaces');
            phoneInput.reportValidity();
          }
          validatePhone(false); // Don't trim while typing
        });
        
        // Trim leading/trailing spaces on blur
        phoneInput.addEventListener('blur', function() {
          validatePhone(true); // Trim on blur
        });
          
        // Check on invalid event for phone - ensure custom message shows
        phoneInput.addEventListener('invalid', function(e) {
          var phoneValue = phoneInput.value || '';
          if (phoneValue) {
            // Check for spaces first
            if (phoneValue.includes(' ')) {
              phoneInput.setCustomValidity('Phone number should not contain spaces');
            } else {
              var trimmedValue = phoneValue.trim();
              // Check format (numbers only)
              if (!/^[0-9]+$/.test(trimmedValue)) {
                phoneInput.setCustomValidity('Phone number should contain only numbers ');
              } else if (trimmedValue.length < 9) {
                phoneInput.setCustomValidity('Phone number must be at least 9 digits');
              } else if (trimmedValue.length > 12) {
                phoneInput.setCustomValidity('Phone number must not exceed 12 digits');
              }
            }
          }
        });
        }
        
        // Check on invalid event for name - ensure custom message shows
        nameInput.addEventListener('invalid', function(e) {
          var nameValue = (nameInput.value || '').trim();
          if (nameValue && !namePattern.test(nameValue)) {
            nameInput.setCustomValidity('Name should contain only letters, spaces, and apostrophes');
          }
        });
        
        // Check on invalid event for email - ensure custom message shows
        emailInput.addEventListener('invalid', function(e) {
          var emailValue = (emailInput.value || '').trim();
          if (emailValue && !emailPattern.test(emailValue)) {
            emailInput.setCustomValidity('Please enter a valid email address.');
          }
        });
        
        // Form submit validation - use capture phase
        formEl.addEventListener('submit', handleSubmit, true);
        
        // Initial validation (don't trim on initial load)
        validateName(false);
        validateEmail();
        if (phoneInput) validatePhone(false);
        if (commentInput) validateComment(false);
      });
    })();
  </script>

