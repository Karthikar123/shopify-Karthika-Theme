  {%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

    /* === Scoped floating label + placeholder fixes for this section === */
    #contact-{{ section.id }} .field .field__label {
      transition: transform 0.2s ease, opacity 0.2s ease;
    }

    #contact-{{ section.id }} .field .field__input:focus + .field__label,
    #contact-{{ section.id }} .field .field__input:not(:placeholder-shown) + .field__label,
    #contact-{{ section.id }} .field .text-area:focus + .field__label,
    #contact-{{ section.id }} .field .text-area:not(:placeholder-shown) + .field__label {
      opacity: 1;
      transform: translateY(-0.4rem) scale(0.9); /* slightly lower, less shrink */
      transform-origin: left top;
    }

    /* Hide placeholders to avoid overlapping with floating labels */
    #contact-{{ section.id }} .field .field__input::placeholder,
    #contact-{{ section.id }} .field .text-area::placeholder {
      opacity: 0;
      transition: opacity 0.2s ease;
    }

    /* Nice anchor landing even without JS */
    #contact-{{ section.id }} .form-status.form__message,
    #contact-{{ section.id }} .form__message[role="alert"] {
      scroll-margin-top: 96px; /* match stickyOffset in script */
    }

    /* Character counter styling */
    #contact-{{ section.id }} .comment-char-counter {
      display: block;
      text-align: right;
      margin-top: 0.5rem;
      font-size: 0.875rem;
      color: rgba(var(--color-foreground), 0.7);
      padding: 0;
      border: none;
      background: transparent;
    }

    #contact-{{ section.id }} .comment-char-counter.exceeded {
      color: #dc2626;
      font-weight: 500;
    }

    
