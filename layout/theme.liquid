      initializedForms.add(formKey);
      
      // Skip captcha forms
      if (formKey === 'captcha_form' || formEl.id === 'captcha_form' || formEl.classList.contains('captcha')) {
        console.log('[Newsletter Validation] Skipping captcha form:', formKey);
        initializedForms.delete(formKey);
        return;
      }
      
      // Extract section ID from form ID (format: NewsletterForm--sectionId)
      var sectionId = '';
      var formId = formEl.id || formEl.getAttribute('id') || '';
      if (formId && formId.indexOf('NewsletterForm--') !== -1) {
        sectionId = formId.replace('NewsletterForm--', '');
      } else {
        // Try to get section ID from parent section element
        var sectionRoot = formEl.closest('[id^="shopify-section-"]');
        if (sectionRoot) {
          sectionId = sectionRoot.id.replace('shopify-section-', '');
        }
      }
      
      var buttonId = 'Subscribe--' + sectionId;
      var errorId = 'Newsletter-inline-error--' + sectionId;
      
      console.log('[Newsletter Validation] Section ID:', sectionId, 'Form ID:', formId, 'Form Key:', formKey);
      
      var emailInput = formEl.querySelector('[data-newsletter-input="' + sectionId + '"]') || formEl.querySelector('input[name="contact[email]"]');
      var submitButton = document.getElementById(buttonId) || formEl.querySelector('[data-newsletter-button="' + sectionId + '"]') || formEl.querySelector('button[type="button"]') || formEl.querySelector('button[type="submit"]');
      var inlineError = document.getElementById(errorId) || formEl.querySelector('[id^="Newsletter-inline-error--"]');
      
      if (!emailInput || !submitButton || !inlineError) {
        console.error('[Newsletter Validation] Missing elements for form:', formKey, {
          emailInput: !!emailInput,
          submitButton: !!submitButton,
          inlineError: !!inlineError,
          form: formEl,
          sectionId: sectionId
        });
        initializedForms.delete(formKey);
        return;
      }
      
      console.log('[Newsletter Validation] All elements found for form:', formId);
      
      // Email validation pattern
      var emailPattern = /^[A-Za-z0-9](?!.*\.\.)[A-Za-z0-9._%+-]*[A-Za-z0-9_%+-]@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$/;
      
      function validateEmail() {
        var emailValue = (emailInput.value || '').trim();
        emailInput.value = emailValue;
        
        if (!emailValue) {
          // Hide inline error - only show browser-native validation
          if (inlineError) {
            inlineError.hidden = true;
            inlineError.textContent = '';
          }
          emailInput.removeAttribute('aria-invalid');
          emailInput.setCustomValidity('Please enter email');
          // Keep button enabled so clicks work - we'll prevent submission instead
          submitButton.disabled = false;
          submitButton.removeAttribute('disabled');
          submitButton.classList.add('button-disabled-visual');
          console.log('[Newsletter Validation] Empty - Button enabled but visually disabled');
          return false;
        }
        
        var isValid = emailPattern.test(emailValue);
        console.log('[Newsletter Validation] Email:', emailValue, 'Valid:', isValid);
        
        if (!isValid) {
          emailInput.setCustomValidity('Please enter a valid email address.');
          // Hide inline error - only show browser-native validation
          if (inlineError) {
            inlineError.hidden = true;
            inlineError.textContent = '';
          }
          emailInput.removeAttribute('aria-invalid');
          // Keep button enabled so clicks work - we'll prevent submission instead
          submitButton.disabled = false;
          submitButton.removeAttribute('disabled');
          submitButton.classList.add('button-disabled-visual');
          console.log('[Newsletter Validation] INVALID - Button enabled but visually disabled');
          return false;
        } else {
          emailInput.setCustomValidity('');
          // Hide inline error
          if (inlineError) {
            inlineError.hidden = true;
            inlineError.textContent = '';
          }
          emailInput.removeAttribute('aria-invalid');
          submitButton.disabled = false;
          submitButton.removeAttribute('disabled');
          submitButton.classList.remove('button-disabled-visual');
          console.log('[Newsletter Validation] VALID - ENABLED');
          return true;
        }
      }
      
      // Prevent form submission
      function preventSubmit(e) {
        if (e) {
          e.preventDefault();
          e.stopPropagation();
          e.stopImmediatePropagation();
        }
        
        var emailValue = (emailInput.value || '').trim();
        console.log('[Newsletter Validation] SUBMIT ATTEMPTED - email:', emailValue);
        
        if (!emailValue || !validateEmail()) {
          console.warn('[Newsletter Validation] BLOCKED SUBMISSION');
          // Show browser-native validation message
          emailInput.reportValidity();
          emailInput.focus();
          return false;
        }
        
        console.log('[Newsletter Validation] ALLOWING SUBMISSION');
        return true;
      }
      
      // Set form onsubmit
      formEl.onsubmit = preventSubmit;
      formEl.addEventListener('submit', preventSubmit, true);
      
      // Handle button click - button is always enabled so clicks work
      submitButton.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        e.stopImmediatePropagation();
        
        console.log('[Newsletter Validation] BUTTON CLICKED');
        
        var emailValue = (emailInput.value || '').trim();
        
        // Check if email is empty first
        if (!emailValue) {
          console.warn('[Newsletter Validation] Empty email - BLOCKED');
          emailInput.setCustomValidity('Please enter email');
          emailInput.reportValidity();
          emailInput.focus();
          return false;
        }
        
        // Validate email format
        if (!validateEmail()) {
          console.warn('[Newsletter Validation] Invalid email - BLOCKED');
          emailInput.reportValidity();
          emailInput.focus();
          return false;
        }
        
        // Only submit if email is valid
        console.log('[Newsletter Validation] Submitting form...');
        formEl.onsubmit = null;
        formEl.removeEventListener('submit', preventSubmit, true);
        formEl.submit();
        return false;
      });
      
      // Ensure button is enabled initially (remove disabled attribute if present)
      submitButton.disabled = false;
      submitButton.removeAttribute('disabled');
      
      // Initial validation
      validateEmail();
      
      // Real-time validation
      emailInput.addEventListener('input', validateEmail);
      emailInput.addEventListener('blur', validateEmail);
      emailInput.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
          e.preventDefault();
          submitButton.click();
        }
      });
      
      console.log('[Newsletter Validation] SETUP COMPLETE for form:', formKey, 'Button disabled:', submitButton.disabled);
    }
    
    function findAndInitNewsletterForms() {
      // Find all newsletter forms - try multiple selectors
      var forms = [];
      var allForms = document.querySelectorAll('form');
      console.log('[Newsletter Validation] Total forms on page:', allForms.length);
      
      // Method 1: Forms with newsletter-form class and NewsletterForm-- ID
      var forms1 = document.querySelectorAll('form.newsletter-form[id^="NewsletterForm--"]');
      console.log('[Newsletter Validation] Method 1 found:', forms1.length);
      forms1.forEach(function(f) { if (!forms.includes(f)) forms.push(f); });
      
      // Method 2: Any form with NewsletterForm-- ID
      var forms2 = document.querySelectorAll('form[id^="NewsletterForm--"]');
      console.log('[Newsletter Validation] Method 2 found:', forms2.length);
      forms2.forEach(function(f) { if (!forms.includes(f)) forms.push(f); });
      
      // Method 3: Forms with newsletter-form class
      var forms3 = document.querySelectorAll('form.newsletter-form');
      console.log('[Newsletter Validation] Method 3 found:', forms3.length);
      forms3.forEach(function(f) { if (!forms.includes(f)) forms.push(f); });
      
      // Method 4: Forms containing newsletter input with data attribute
      var emailInputs = document.querySelectorAll('input[name="contact[email]"][data-newsletter-input]');
      console.log('[Newsletter Validation] Method 4 found inputs:', emailInputs.length);
      emailInputs.forEach(function(input) {
        var form = input.closest('form');
        if (form && !forms.includes(form)) forms.push(form);
      });
      
      // Method 5: Forms with contact[tags]=newsletter hidden input (MOST RELIABLE)
      var hiddenInputs = document.querySelectorAll('input[name="contact[tags]"]');
      console.log('[Newsletter Validation] Method 5 checking', hiddenInputs.length, 'hidden inputs');
      hiddenInputs.forEach(function(input) {
        if (input.value === 'newsletter') {
          var form = input.closest('form');
          // Skip captcha forms - only add newsletter forms
          if (form && form.id !== 'captcha_form' && !form.classList.contains('captcha') && form.id.indexOf('captcha') === -1) {
            // Only add if form has newsletter-form class or NewsletterForm-- ID
            if (form.classList.contains('newsletter-form') || (form.id && form.id.indexOf('NewsletterForm--') !== -1)) {
              if (!forms.includes(form)) {
                console.log('[Newsletter Validation] Found newsletter form via hidden input:', form.id, form);
                forms.push(form);
              }
            } else {
              console.log('[Newsletter Validation] Skipping form (not newsletter-form):', form.id, form.className);
            }
          } else {
            console.log('[Newsletter Validation] Skipping captcha form:', form ? form.id : 'no form');
          }
        }
      });
      
      // Method 6: Forms with contact[email] input (fallback)
      if (forms.length === 0) {
        var emailInputsAll = document.querySelectorAll('input[name="contact[email]"]');
        console.log('[Newsletter Validation] Method 6 found', emailInputsAll.length, 'email inputs');
        emailInputsAll.forEach(function(input) {
          var form = input.closest('form');
          if (form && form.action && (form.action.indexOf('contact') !== -1 || form.action.indexOf('customer') !== -1)) {
            if (!forms.includes(form)) {
              console.log('[Newsletter Validation] Found potential newsletter form:', form);
              forms.push(form);
            }
          }
        });
      }
      
      console.log('[Newsletter Validation] Total newsletter forms found:', forms.length);
      if (forms.length > 0) {
        forms.forEach(function(form, index) {
          console.log('[Newsletter Validation] Form', index + 1, ':', form.id, form.className, form);
        });
      }
      
      forms.forEach(function(form) {
        initNewsletterValidation(form);
      });
    }
    
    // Run immediately
    findAndInitNewsletterForms();
    
    // Also run on DOM ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', findAndInitNewsletterForms);
    }
    
    // Retry after delays for dynamically loaded content
    setTimeout(findAndInitNewsletterForms, 100);
    setTimeout(findAndInitNewsletterForms, 500);
    setTimeout(findAndInitNewsletterForms, 1000);
    
    // Listen for Shopify section loads (theme editor)
    document.addEventListener('shopify:section:load', function(event) {
      setTimeout(findAndInitNewsletterForms, 100);
    });
  })();
