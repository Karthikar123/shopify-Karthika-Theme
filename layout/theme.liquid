<script>
  (function () {
    // --- utility: safely close any Rebuy pop-up/modal ---
    function closeRebuyPopup() {
      try {
        // If a Rebuy modal API exists, try that first
        if (window.Rebuy && Rebuy.Modal && typeof Rebuy.Modal.close === 'function') {
          Rebuy.Modal.close();
          return;
        }
      } catch (e) {}

      // Fallbacks: click common close buttons if present
      var closeBtns = document.querySelectorAll(
        '[data-rebuy-close], .rebuy-close, .rebuy-modal__close, .rebuy-popup__close'
      );
      closeBtns.forEach(function (btn) { try { btn.click(); } catch (e) {} });

      // Last resort: hide typical modal/overlay elements
      var modals = document.querySelectorAll(
        '.rebuy-modal, .rebuy-popup, .rebuy-widget-modal, .rebuy-overlay'
      );
      modals.forEach(function (el) {
        el.classList.add('is-closing');
        el.style.display = 'none';
        el.setAttribute('aria-hidden', 'true');
      });
    }

    function ready(fn) {
      if (document.readyState !== 'loading') fn();
      else document.addEventListener('DOMContentLoaded', fn);
    }

    ready(function () {
      var tries = 0;
      var poll = setInterval(function () {
        tries++;
        if (window.Rebuy && window.Rebuy.SmartCart) {
          clearInterval(poll);
          wireUp();
        }
        if (tries > 50) clearInterval(poll); // ~5s safety stop
      }, 100);
    });

    function wireUp() {
      var SmartCart = window.Rebuy.SmartCart;

      // We want the pop-up to show first (cart should NOT auto-open on add)
      SmartCart.skip_open = true;

      // Track per "pop-up cycle"
      var openedThisCycle = false;

      function resetCycle() {
        openedThisCycle = false;
        // Ensure pop-up gets priority on the next ATC
        SmartCart.skip_open = true;
      }

      // When the pop-up shows, start a new "cycle"
      document.addEventListener('rebuy.show', resetCycle);

      function openCartAndClosePopup() {
        if (openedThisCycle) return;
        openedThisCycle = true;

        // Open Smart Cart NOW
        try { SmartCart.show(); } catch (e) {}

        // Restore default behavior after we’ve opened it once
        SmartCart.skip_open = false;

        // Close the pop-up
        closeRebuyPopup();

        // In case a new pop-up appears later (next ATC), we’ll reset on next 'rebuy.show'
      }

      // If shopper adds an item from the pop-up → open cart & close pop-up
      document.addEventListener('rebuy.add', openCartAndClosePopup);

      // If shopper dismisses the pop-up → open cart & close pop-up
      document.addEventListener('rebuy.hide', openCartAndClosePopup);
    }
  })();
</script>
